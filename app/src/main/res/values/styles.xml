<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--<style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>-->

    <style name="ActionBarThemeOverlay" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.AppTheme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="AppTheme.Toolbar.ActionButton" parent="@style/Base.AppTheme.Toolbar.ActionButton">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/statusbarBackground</item>
    </style>

    <!-- Activity Animation -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Common -->
    <style name="actionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/actionbarBackground</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textNegative" parent="text">
        <item name="android:textColor">@color/textNegative</item>
    </style>

    <style name="textBig" parent="text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textBigBold" parent="text">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header" parent="text">
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="subtitle" parent="text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header1" parent="text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2" parent="text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header3" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_home" parent="header3">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:layout_marginEnd">@dimen/padding</item>
        <item name="android:background">@drawable/background_header</item>
    </style>

    <style name="card_outer_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">178dp</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
    </style>

    <style name="card_inner_container">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_header">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:color">@color/cardHeader</item>
        <item name="android:background">#00ff0000</item>
    </style>

    <style name="card_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/card_best_yield_icon_size</item>
        <item name="android:layout_height">@dimen/card_best_yield_icon_size</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">#0000ff00</item>
    </style>

    <style name="card_value" parent="card_header">
        <item name="android:textSize">19sp</item>
        <item name="android:background">#000000ff</item>
    </style>

    <style name="card_small_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/card_small_icon_size</item>
        <item name="android:layout_height">@dimen/card_small_icon_size</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">#0000ff00</item>
    </style>

    <style name="li" parent="text">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/icon_bullet</item>
    </style>

    <style name="button" parent="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_button_round_corners</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="buttonDisable" parent="button">
        <item name="android:background">@drawable/background_button_disable_round_corners</item>
        <item name="android:textColor">@color/buttonDisableText</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="tooltipText" parent="text">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="tooltipButton" parent="button">
        <item name="android:background">@drawable/background_button_round_corners</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <!-- Table -->
    <style name="table_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:textColor">@color/tableText</item>
        <item name="android:background">@drawable/table_header_border_top_bottom_left</item>
    </style>

    <style name="table_header_first" parent="table_header">
        <item name="android:background">@drawable/tabla_header_border_top_bottom_right_left</item>
        <item name="android:layout_weight">0.6</item>
    </style>

    <style name="table_cell" parent="table_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/table_row_border_bottom_left</item>
    </style>

    <style name="table_cell_first" parent="table_cell">
        <item name="android:background">@drawable/table_row_border_bottom_right_left</item>
        <item name="android:layout_weight">0.7</item>
    </style>

    <style name="table_cell_bold" parent="table_cell">
        <item name="android:background">@drawable/table_row_border_bottom_left_bold</item>
    </style>

    <style name="table_cell_first_bold" parent="table_cell_first">
        <item name="android:background">@drawable/table_row_border_bottom_right_left_bold</item>
    </style>

    <style name="table_cell_selected" parent="table_cell">
        <item name="android:background">@drawable/table_row_border_bottom_left_selected</item>
    </style>

    <style name="table_cell_first_selected" parent="table_cell_first">
        <item name="android:background">@drawable/table_row_border_bottom_right_left_selected</item>
    </style>

    <!-- Dialog -->
    <style name="dialog_header" parent="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_message" parent="dialog_header">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="dialog_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_huge</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="dialog_button" parent="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">50</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_button_round_corners</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">@dimen/padding_tiny</item>
        <item name="android:paddingEnd">@dimen/padding_tiny</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="dialog_button_disable" parent="dialog_button">
        <item name="android:background">@drawable/background_button_disable_round_corners</item>
        <item name="android:textColor">@color/buttonDisableText</item>
    </style>

    <!-- Drawer -->
    <style name="drawerContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="drawerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="drawerIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="drawerDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/dividerDrawer</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <!-- Avatar -->
    <style name="avatar">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="avatarSmall" parent="avatar">
        <item name="android:layout_width">@dimen/avatar_small_size</item>
        <item name="android:layout_height">@dimen/avatar_small_size</item>
    </style>

    <style name="avatarMedium" parent="avatar">
        <item name="android:layout_width">@dimen/avatar_medium_size</item>
        <item name="android:layout_height">@dimen/avatar_medium_size</item>
    </style>

    <style name="avatarActionbar" parent="avatar">
        <item name="android:layout_width">@dimen/avatar_actionbar_size</item>
        <item name="android:layout_height">@dimen/avatar_actionbar_size</item>
    </style>

    <!-- Title Actionbar -->
    <style name="actionbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/padding_huge</item>
        <item name="android:layout_marginEnd">@dimen/padding_huge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="actionbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gveret_levin_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/actionbarTitle</item>
    </style>

    <!-- Score -->
    <style name="score">
        <item name="android:layout_width">@dimen/score_size</item>
        <item name="android:layout_height">@dimen/score_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Loader -->
    <style name="loader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="loaderText" parent="text">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Form -->
    <style name="formLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="formIcon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="formField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:textColorHint">@color/formHint</item>
        <item name="android:background">@drawable/background_field_round_corners</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:inputType"></item>
    </style>

    <style name="formFieldDark" parent="formField">
        <item name="android:background">@drawable/background_field_dark_round_corners</item>
    </style>

    <style name="formError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="formSuccess" parent="formError">
        <item name="android:textColor">@color/formText</item>
    </style>

    <style name="formText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formText</item>
    </style>

    <style name="codeField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:background">@drawable/background_field_dark_round_corners</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:layout_margin">@dimen/padding_tiny</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="codeFieldSmall" parent="codeField">
        <item name="android:padding">@dimen/padding_middle</item>
        <item name="android:layout_margin">@dimen/padding_middle</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="formLink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/formText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
    </style>

    <!-- message -->
    <style name="messageSummary" parent="formLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="messageTitlePositive" parent="messageSummary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/messageTitlePositive</item>
    </style>

    <style name="messageTitleNegative" parent="messageTitlePositive">
        <item name="android:textColor">@color/messageTitleNegative</item>
    </style>

    <!-- Steps -->
    <style name="stepsStep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- google pay -->
    <style name="googlePayCardContainer">
        <item name="android:layout_width">@dimen/home_property_width</item>
        <item name="android:layout_height">@dimen/home_property_height</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
    </style>

    <style name="googlePayCardContainerSelected" parent="googlePayCardContainer">
        <item name="android:background">@drawable/border_card</item>
    </style>

    <style name="googlePayCardPeriod">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gveret_levin_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/googlePayCardPeriod</item>
    </style>

    <style name="googlePayCardPrice" parent="googlePayCardPeriod">
        <item name="android:textColor">@color/googlePayCardPrice</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
