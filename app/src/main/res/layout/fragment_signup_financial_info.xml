<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/container"
    android:layout_marginStart="@dimen/padding"
    android:layout_marginEnd="@dimen/padding"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/container">

    <!-- equity -->
    <com.adirahav.diraleashkaa.views.LabelWithIcon
        android:id="@+id/equityLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:iconSrc="@drawable/icon_help"
        custom:iconExist="true" />

    <EditText
        android:id="@+id/equity"
        style="@style/formFieldDark"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/equityError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/formError"
        android:visibility="gone" />

    <!-- incomes -->
    <com.adirahav.diraleashkaa.views.LabelWithIcon
        android:id="@+id/incomesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:iconSrc="@drawable/icon_help"
        custom:iconExist="true" />

    <EditText
        android:id="@+id/incomes"
        style="@style/formFieldDark"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/incomesError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/formError"
        android:visibility="gone" />

    <!-- commitments -->
    <com.adirahav.diraleashkaa.views.LabelWithIcon
        android:id="@+id/commitmentsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:iconSrc="@drawable/icon_help"
        custom:iconExist="true" />

    <EditText
        android:id="@+id/commitments"
        style="@style/formFieldDark"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/commitmentsError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/formError"
        android:visibility="gone" />
</LinearLayout>
