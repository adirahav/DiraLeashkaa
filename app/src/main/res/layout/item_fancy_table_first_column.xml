<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        tools:text="1x3 First Column"
        android:paddingTop="@dimen/padding_tiny"
        android:paddingBottom="@dimen/padding_tiny"
        android:paddingEnd="@dimen/padding_tiny"
        android:paddingRight="@dimen/padding_tiny"
        android:paddingStart="@dimen/padding_tiny"
        android:paddingLeft="@dimen/padding_tiny"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tableDivider"/>

</LinearLayout>
